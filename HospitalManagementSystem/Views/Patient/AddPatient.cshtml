@model HospitalManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Add Patient Details";
}

<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Add Patient's Details</h4>
    <hr>
</div>

<form method="post" asp-controller="Patient" asp-action="AddPatient">
    <div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label>Patient Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PatientName" class="form-control" />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Patient Status</label>
                    </div>

                    <div class="col-8">
                        <input asp-for="PatientStatus" class="form-control" />
                        <span asp-validation-for="PatientStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Patient Problem</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PatientProb" class="form-control" />
                        <span asp-validation-for="PatientProb" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Department Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeptName" class="form-control" />
                        <span asp-validation-for="DeptName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-danger w-100" value="Add" />
                    </div>

                </div>
                @if (ViewBag.Message != null)
                {
                <a class="btn btn-outline-info btn-lg btn-block" asp-controller="Admin" asp-action="GetAllPatients">List of all patients</a>
                <script type="text/javascript">
                                                window.onload = function () {
                                                alert("@ViewBag.Message");
                                                };
                </script>
                }
            </div>
        </div>
    </div>
</form>
