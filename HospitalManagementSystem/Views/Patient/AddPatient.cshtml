@model HospitalManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Add Patient Details";
}

<form method="post" asp-controller="Patient" asp-action="AddPatient">
    <div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PatientName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PatientName" class="form-control" />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PatientStatus"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PatientStatus" class="form-control" />
                        <span asp-validation-for="PatientStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PatientProb"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PatientProb" class="form-control" />
                        <span asp-validation-for="PatientProb" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeptId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeptId" class="form-control" />
                        <span asp-validation-for="DeptId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Add" />
                    </div>
                    @if (ViewBag.Message != null)
                    {
                    <a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #ff8d00;float: right" asp-controller="Admin" asp-action="GetAllPatients">Get Patient Details</a>
                    <script type="text/javascript">
                                                window.onload = function () {
                                                alert("@ViewBag.Message");
                                                };
                    </script>
                    }
                </div>
            </div>
        </div>
    </div>
</form>
