@model IEnumerable<HospitalManagementSystem.Models.Patient>

@{
        ViewData["Title"] = "Get All Patients";
    }

<div >
<h2 class="text-primary">All Patient List</h2>
</div>

<div class="container p-3">
    <div>
        <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #00b9ff;float: right" asp-controller="Admin" asp- asp-action="GetAllPatient1">Get All Patients Details</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        PatientID
                    </th>
                    <th>
                        PatientName
                    </th>
                    <th>
                        PatientStatus
                    </th>
                    <th>
                        PatientProb
                    </th>
                    <th>
                        DeptId
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.PatientID</td>
                        <td>@detail.PatientName</td>
                        <td>@detail.PatientStatus</td>
                        <td>@detail.PatientProb</td>
                        <td>@detail.DeptId</td>
                     
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Admin" asp-route-Id="@detail.PatientID" asp-action="EditPatient" class="btn btn-primary mx-1">
                                    Edit<i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }
    </div>