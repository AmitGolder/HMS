@model IEnumerable<HospitalManagementSystem.Models.Patient>

@{
        ViewData["Title"] = "Details of Patients";
    }
<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">List of all patients</h4>
    <hr>
</div>

<div class="container p-3">
    
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Patient ID
                    </th>
                    <th>
                        Patient Name
                    </th>
                    <th>
                        Patient Status
                    </th>
                    <th>
                        Patient Problem
                    </th>
                    <th>
                        Department Name
                    </th>
                    <th>
                        Update Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.PatientID</td>
                        <td>@detail.PatientName</td>
                        <td>@detail.PatientStatus</td>
                        <td>@detail.PatientProb</td>
                        <td>@detail.DeptName</td>
                     
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Admin" asp-route-Id="@detail.PatientID" asp-action="EditPatient" class="btn btn-outline-primary">
                                    Update<i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }
    </div>