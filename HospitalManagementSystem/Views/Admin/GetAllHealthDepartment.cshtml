@model IEnumerable<HospitalManagementSystem.Models.HealthDepartment>
@{
    ViewData["Title"] = "List of health departments";
}

<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">List of Health Department</h4>
    <hr>
</div>

<div class="container p-3">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Department ID
                    </th>
                    <th>
                        Department Name
                    </th>
                    <th>
                        Update Department
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.DeptId</td>
                        <td>@detail.DeptName</td>


                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Admin" asp-route-Id="@detail.DeptId" asp-action="EditHealthDepartment" class="btn btn-outline-primary btn-sm">
                                    Update<i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }
    <a class="btn btn-outline-danger btn-lg btn-block" asp-controller="HealthDepartment" asp-action="AddHealthDepartmentById">Add Health Department</a>
</div>





