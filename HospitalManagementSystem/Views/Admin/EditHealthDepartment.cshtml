@model HospitalManagementSystem.Models.HealthDepartment
@{
    ViewData["Title"] = "EditHealthDepartment";
}

<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Update Health Department</h4>
    <hr>
</div>
<form method="post" asp-controller="Admin" asp-action="EditHealthDepartment">
    <div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Department ID</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeptId" class="form-control" readonly />
                        <span asp-validation-for="DeptId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Department ID</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeptName" class="form-control"/>
                        <span asp-validation-for="DeptName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Update" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

